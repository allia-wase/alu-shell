#!/usr/bin/env bash
# The init script manages another process. It can start, stop, or restart the process, 
# and displays messages and creates/deletes a PID file.

PID_FILE="/var/run/my_process.pid"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
        exit 1
    fi
    
    ./manage_my_process &
    echo "$!" > "$PID_FILE"
    echo "manage_my_process started"
}

stop() {
    if [ ! -f "$PID_FILE" ]; then
        echo "manage_my_process is not running."
        exit 1
    fi
    
    pid=$(cat "$PID_FILE")
    kill "$pid"
    rm -f "$PID_FILE"
    echo "manage_my_process stopped"
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac

